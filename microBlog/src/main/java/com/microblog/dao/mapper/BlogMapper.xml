<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
	"-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtds/mybatis-3-mapper.dtd">
<mapper namespace="com.microblog.dao.mapper.BlogMapper">
	<insert id="saveBlog" parameterType="Blog">
		insert into
		blog(uid,text,pic,fdate,source)
		values(#{uid},#{text},#{pic},now(),#{source})
	</insert>


	<select id="getBlog" resultMap="BlogMap">
		select * from blog
	</select>
	<resultMap type="Blog" id="BlogMap">
		<association property="user" column="uid"
			select="com.yc.dao.mapper.UserMapper.findUser" />
		<association property="street" column="STREET_ID"
			select="com.yc.dao.mapper.StreetMapper.getStreet" />
		<association property="houseType" column="TYPE_ID"
			select="com.yc.dao.mapper.HouseTypeMapper.getTypeById" />
	</resultMap>
</mapper>